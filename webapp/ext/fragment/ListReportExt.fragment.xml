<core:FragmentDefinition xmlns="sap.m" xmlns:smartfilterbar="sap.ui.comp.smartfilterbar" xmlns:core="sap.ui.core">
	<smartfilterbar:ControlConfiguration key="CustomSearch" index="0" label="{i18n>lblWordSearch}"
		visibleInAdvancedArea="true" groupId="_BASIC">
		<smartfilterbar:customControl>
			<Input id="customFilter-search"/>
		</smartfilterbar:customControl>
	</smartfilterbar:ControlConfiguration>
	<smartfilterbar:ControlConfiguration key="CustomBoolean" index="1" label="{i18n>lblBoolExp}"
		visibleInAdvancedArea="true" groupId="_BASIC">
		<smartfilterbar:customControl>
			<ComboBox id="customFilter-boolean">
				<core:Item key="0" text="{i18n>comboAnd}"/>
				<core:Item key="1" text="{i18n>comboOr}"/>
			</ComboBox>
		</smartfilterbar:customControl>
	</smartfilterbar:ControlConfiguration>
</core:FragmentDefinition>